<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="ShareTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/box_primary</item>
        <item name="colorPrimaryDark">@color/box_primary_dark</item>
        <item name="colorAccent">@color/box_accent</item>
        <item name="android:buttonStyle">@style/ButtonAppTheme</item>
    </style>

    <style name="ButtonAppTheme" parent="android:Widget.Material.Button.Borderless">
        <item name="android:background">@drawable/box_ripple_btn</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">#ff7c7c7c</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_gravity">left|start|center_vertical</item>
        <item name="android:gravity">left|start|center_vertical</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    </style>

    <style name="RaisedButton"  parent="android:Widget.Material.Button.Borderless.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/box_button_height</item>
        <item name="android:background">@drawable/box_ripple_raised_btn</item>
        <item name="android:ellipsize">end</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/box_background</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:gravity">start|left|center_vertical</item>
        <item name="android:layout_gravity">start|left|center_vertical</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="RaisedGrayButton"  parent="@style/RaisedButton">
        <item name="android:background">@drawable/box_ripple_raised_gray_btn</item>
        <item name="android:textColor">@color/box_primary_text</item>
    </style>



